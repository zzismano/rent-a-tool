<div class="container">

      <%= simple_form_for([@tool, @review]) do |f| %>

      <div class="form-inputs">
        <%= f.input :content %>
      </div>

      <div class="form-inputs">
        <%= f.input :rating, as: :select, collection: (1..5), required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class:"btn btn-primary" %>
      </div>

  <% end %>
</div>
