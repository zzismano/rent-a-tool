 <div class="container">

      <%= simple_form_for(@tool) do |f| %>

      <div class="form-inputs">
        <%= f.input :name %>

      </div>

      <div class="form-inputs">
        <%= f.input :description %>

      </div>

      <div class="form-inputs">
        <%= f.input :picture_url %>

      </div>

      <div class="form-inputs">
        <%= f.input :price %>

      </div>

      <div class="form-inputs">
        <%= f.input :availability %>

      </div>

      <div class="form-inputs">
        <%= f.association :category %>

      </div>


      <div class="form-actions">
        <%= f.button :submit %>
      </div>

  <% end %>
</div>
