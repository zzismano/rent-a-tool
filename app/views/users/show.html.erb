
<div class="container">
  <div class="row" style="">
    <div  class="shadow p-3 m-3 bg-body-tertiary rounded-4 align-items-center col-12 col-md-6 col-lg-4"  >
      <%# <img src="" alt="profile picture" class="rounded-circle img-thumbnail h-1 w-1"> %>
      <div class="d-flex mb-5 align-items-center">
        <img class="avatar-large" alt="avatar-large" src="<%=@user.picture_url%>">
        <div class=" d-flex flex-column justify-content-start">
          <h1><%= @user.first_name %><span> </span><%=@user.last_name %></h1>
          <p>Located in <%= @user.location %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
  <h2>Toolbox</h2>
  <% if @user.tools %>
      <% @user_tools.each do |tool| %>
      <%= render "shared/toolcard", tool: tool %>
      <% end %>
    <% end %>
  </div>
  <div>
    <div class="row d-flex justify-content-center">
    <h2>My rentals</h2>
      <% @user.rentals.each do |rental| %>
        <div class="shadow p-3 m-3 bg-body-tertiary rounded-4 col-8">
          <%= rental.tool.name %>
          <%= rental.tool.picture_url %>
          <%= rental.tool.description %>
          <%= rental.start_date %>
          <%= rental.end_date %>
          <%= rental.tool.user.first_name %>
          <%= rental.tool.user.picture_url %>
        </div>
      <% end %>
    </div>
  </div>
</div>
